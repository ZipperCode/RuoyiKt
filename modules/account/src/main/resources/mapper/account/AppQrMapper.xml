<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.zipper.modules.account.mapper.AppQrMapper">
    <resultMap id="appAccountResult" type="org.zipper.modules.account.domain.vo.AppQrVo">
        <id property="id" column="id"/>
        <result property="createBy" column="create_by"/>
        <association property="record" column="record_id" resultMap="recordResult" notNullColumn="record_id"/>
    </resultMap>

    <resultMap id="recordResult" type="org.zipper.modules.account.domain.vo.AppQrRecordVo">
        <id property="id" column="record_id"/>
        <result property="used" column="record_used"/>
        <result property="bindUserId" column="record_bind_user_id"/>
        <result property="createBy" column="record_create_by"/>
    </resultMap>

    <select id="selectAppAccountList" resultMap="appAccountResult">
        select a.id
             , a.qr_content
             , a.qr_path,
             , a.country
             , a.age
             , a.work
             , a.income
             , a.classify
             , a.status
             , a.remark
             , a.screenshot
             , a.link_remark
             , a.create_by
             , a.create_time
             , a.update_by
             , a.update_time
             , r.id        as record_id
             , r.used      as record_used
             , r.bind_user_id as record_bind_user_id
             , r.create_by as record_create_by
        from app_qr a
                 left join app_qr_record r on a.id = r.account_id
            ${ew.getCustomSqlSegment}
    </select>
</mapper>
